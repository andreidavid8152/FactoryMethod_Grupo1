@{
    var muebles = Model;
}

<h1>Muebles</h1>
<br />

<button type="button" class="btn btn-dark mb-3" onclick="location.href='@Url.Action("Create", "Mueble")'">Crear</button>
<br />
<br />


<table class="table table-dark">
    <thead>
        <tr>
            <th>#</th>
            <th>Tipo</th>
            <th>Material</th>
            <th>Color</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mueble in muebles)
        {
            <tr>
                <td>@mueble.Id</td>
                <td>@mueble.Tipo</td>
                <td>@mueble.Material</td>
                <td>@mueble.Color</td>
            </tr>
        }
    </tbody>
</table>